cola_quantity = 140
buyers = 7
cola_per_buyer = [10, 20, 40, 60, 10, 0, 0]

for i in range(buyers):
    if cola_quantity >= cola_per_buyer[i]:
        cola_quantity -= cola_per_buyer[i]
        print(f"Покупатель {i+1} купил {cola_per_buyer[i]} штук колы. Осталось {cola_quantity} штук.")
    else:
        print(f"Колы не хватило для покупателя {i+1}.")
